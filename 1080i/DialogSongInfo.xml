<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="group">
            <include>OptionsShutdownAnimation</include>
            <include condition="stringcompare(Container.ViewMode,List)">SongInfoList</include>
            <include condition="stringcompare(Container.ViewMode,Info list)">SongInfoInfoList</include>
            <include condition="stringcompare(Container.ViewMode,Banner)">SongInfoCoverList</include>
            <include condition="stringcompare(Container.ViewMode,Cover)">SongInfoCoverView</include>
            <include condition="Window.IsVisible(musicplaylisteditor)">SongInfoMusicPlaylistEditor</include>
        </control>
    </controls>
</window>