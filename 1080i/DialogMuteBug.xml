<window>
    <defaultcontrol>-</defaultcontrol>
    <zorder>5</zorder>
    <controls>
        <control type="group">
            <visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
                
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
                
            </animation>
            <animation type="Visible">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
                
            </animation>
            <animation type="Hidden">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
       
            </animation>
            
            <control type="image">
                <description>Cock image</description>
                <posx>1817</posx>
                <posy>-10</posy>
                <width>100</width>
                <height>100</height>
                <texture>overlays/volume/muted-info.png</texture>
            </control>
        </control>
    </controls>
</window>